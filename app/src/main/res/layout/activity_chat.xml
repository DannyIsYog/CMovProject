<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="">

    </androidx.appcompat.widget.AppCompatButton>
    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/chat_entries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"

        app:layout_constraintBottom_toTopOf="@id/new_chat_entry"/>

    <EditText
        android:id="@+id/new_chat_entry"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/default_new_msg_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:autofillHints="hello,bye,yes,no,MEPP is great,are you nuts?"
        />



</androidx.constraintlayout.widget.ConstraintLayout>